<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingStart="@dimen/padding16"
    android:paddingEnd="@dimen/padding16"
    android:gravity="center|left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/send_code_to_email"
            android:paddingBottom="20dp"
            style="@style/Title3"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingBottom="20dp"
            style="@style/Title3"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/write_code"
        android:paddingBottom="15dp"
        style="@style/Title3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cell1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginEnd="@dimen/margin8"
            android:background="@drawable/custom_form_border"
            android:inputType="number"
            android:maxLength="1"
            android:drawableLeft="@drawable/ic_empty_star"
            android:paddingStart="18dp"/>

        <EditText
            android:id="@+id/cell2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginEnd="@dimen/margin8"
            android:background="@drawable/custom_form_border"
            android:inputType="number"
            android:maxLength="1"
            android:drawableLeft="@drawable/ic_empty_star"
            android:paddingStart="18dp"/>

        <EditText
            android:id="@+id/cell3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginEnd="@dimen/margin8"
            android:background="@drawable/custom_form_border"
            android:inputType="number"
            android:maxLength="1"
            android:drawableLeft="@drawable/ic_empty_star"
            android:paddingStart="18dp"/>

        <EditText
            android:id="@+id/cell4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/custom_form_border"
            android:inputType="number"
            android:maxLength="1"
            android:drawableLeft="@drawable/ic_empty_star"
            android:paddingStart="18dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/confirmBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_button_color_one"
        app:backgroundTint="@color/button_background_color_blue"
        app:shapeAppearance="@style/shape8"
        android:text="@string/confirm"
        android:textAllCaps="false"
        style="@style/ButtonText2"/>

</LinearLayout>